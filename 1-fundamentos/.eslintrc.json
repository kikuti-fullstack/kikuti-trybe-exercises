{
  "env": {
    "browser": true,
    "es2021": true,
    // "jest/globals": true,
    "node": true
  },
  "extends": "trybe-fundamentals",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": ["error", "FunctionExpression"],
    "max-len": "off",
    "no-return-assign":"off",
    "no-param-reassign": "off",
    "sonarjs/no-duplicate-string": "off",
    "complexity": [
      "error",
      {
        "max": 6
      }
    ]
  }
}